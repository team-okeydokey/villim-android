<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/search_highlight</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:color">@android:color/white</item>
        <item name="fontPath">fonts/NotoSansCJKkr-Medium</item>
    </style>


    <style name="CollapsingToolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="h1"> <!-- Fragment title -->
        <item name="android:textSize">12pt</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="h2">
        <item name="android:textSize">10pt</item>
        <item name="android:color">@color/h2</item>
    </style>

    <style name="h3">
        <item name="android:textSize">10pt</item>
        <item name="android:color">@color/h3</item>
    </style>

    <!-- Profile Fragment -->
    <style name="profile_list_item_title">
        <item name="android:textSize">8pt</item>
        <item name="android:color">@color/h3</item>
    </style>

    <style name="profile_list_item_value">
        <item name="android:textSize">6pt</item>
        <item name="android:color">@color/profile_list_item_value</item>
    </style>

    <!-- Discover Fragment -->
    <style name="customRatingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="android:progressTint">@color/rating_color</item>
        <item name="android:secondaryProgressTint">@color/rating_color</item>
    </style>

    <!-- Review Activity -->
    <style name="VillimRatingBar" parent="android:style/Widget.Material.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar</item>
        <item name="android:numStars">5</item>
        <item name="android:progressTint">@color/rating_color</item>
        <item name="android:secondaryProgressTint">@color/rating_color</item>
    </style>


</resources>
